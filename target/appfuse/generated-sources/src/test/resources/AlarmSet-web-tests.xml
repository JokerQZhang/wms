    <!--AlarmSet-START-->
    <!-- runs alarmSet-related tests -->
    <target name="AlarmSetTests" depends="SearchAlarmSets,EditAlarmSet,SaveAlarmSet,AddAlarmSet,DeleteAlarmSet"
            description="Call and executes all alarmSet test cases (targets)">
        <echo>Successfully ran all AlarmSet UI tests!</echo>
    </target>

    <!-- Verify the alarmSets list screen displays without errors -->
    <target name="SearchAlarmSets" description="Tests search for and displaying all alarmSets">
        <webtest name="searchAlarmSets">
            &config;
            <steps>
                &login;
                <invoke description="click View AlarmSet link" url="/alarmSets"/>
                <verifytitle description="we should see the alarmSetList title"
                             text=".*${alarmSetList.title}.*" regex="true"/>
                <setinputfield description="set search term" name="q" value="*"/>
                <clickbutton label="${button.search}" description="Click Search"/>
                <verifytitle description="we should see the alarmSetList title"
                             text=".*${alarmSetList.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>

    <!-- Verify the edit alarmSet screen displays without errors -->
    <target name="EditAlarmSet" description="Tests editing an existing AlarmSet's information">
        <webtest name="editAlarmSet">
            &config;
            <steps>
                &login;
                <invoke description="click Edit AlarmSet link" url="/editAlarmSet?alarmSetId=-1"/>
                <verifytitle description="we should see the alarmSetDetail title"
                             text=".*${alarmSetDetail.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>

    <!-- Edit a alarmSet and then save -->
    <target name="SaveAlarmSet" description="Tests editing and saving a alarmSet">
        <webtest name="saveAlarmSet">
            &config;
            <steps>
                &login;
                <invoke description="click Edit AlarmSet link" url="/editAlarmSet?alarmSetId=-1"/>
                <verifytitle description="we should see the alarmSetDetail title"
                             text=".*${alarmSetDetail.title}.*" regex="true"/>

                <!-- update some of the required fields -->

                <clickbutton label="${button.save}" description="Click Save"/>
                <verifytitle description="Page re-appears if save successful"
                             text=".*${alarmSetDetail.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${alarmSet.updated}"/>
            </steps>
        </webtest>
    </target>

    <!-- Add a new AlarmSet -->
    <target name="AddAlarmSet" description="Adds a new AlarmSet">
        <webtest name="addAlarmSet">
            &config;
            <steps>
                &login;
                <invoke description="click Add Button" url="/editAlarmSet"/>
                <verifytitle description="we should see the alarmSetDetail title"
                             text=".*${alarmSetDetail.title}.*" regex="true"/>

                <!-- enter required fields -->

                <clickbutton label="${button.save}" description="Click button 'Save'"/>
                <verifytitle description="AlarmSet List appears if save successful"
                             text=".*${alarmSetList.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${alarmSet.added}"/>
            </steps>
        </webtest>
    </target>

    <!-- Delete existing alarmSet -->
    <target name="DeleteAlarmSet" description="Deletes existing AlarmSet">
        <webtest name="deleteAlarmSet">
            &config;
            <steps>
                &login;
                <invoke description="click Edit AlarmSet link" url="/editAlarmSet?alarmSetId=-1"/>
                <clickbutton label="${button.delete}" description="Click button 'Delete'"/>
                <verifytitle description="display AlarmSet List" text=".*${alarmSetList.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${alarmSet.deleted}"/>
            </steps>
        </webtest>
    </target>
    <!--AlarmSet-END-->
</project>
